<phone:PhoneApplicationPage
    x:Class="Annoying_Mosquito.Train"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ar="clr-namespace:SharpGIS.AR.Controls;assembly=SharpGIS.AR"
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="768"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Landscape" Orientation="LandscapeLeft"
    shell:SystemTray.IsVisible="False">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}">

        <Rectangle x:Name="videoRectangle" Margin="0,0,0,0">
            <Rectangle.Fill>
                <VideoBrush x:Name="viewfinderBrush" AlignmentX="Left" AlignmentY="Top" Stretch="Fill">
                    <VideoBrush.RelativeTransform>
                        <CompositeTransform x:Name="videoBrushTransform" CenterX="0.5" CenterY="0.5" />
                    </VideoBrush.RelativeTransform>
                </VideoBrush>
            </Rectangle.Fill>
        </Rectangle>


        <ar:ARPanel x:Name="arPanel"
		 Loaded="ARPanel_Loaded" Unloaded="ARPanel_Unloaded">

            <!--North horizontal pointer-->
            <Grid ar:ARPanel.Direction="0,0">
                <Ellipse Fill="{StaticResource PhoneAccentBrush}" />
            </Grid>

            <!--South horizontal pointer-->
            <Grid ar:ARPanel.Direction="0,180" >
                <Ellipse Fill="{StaticResource PhoneAccentBrush}" />
            </Grid>

            <!--West horizontal pointer-->
            <Grid ar:ARPanel.Direction="0,270" >
                <Ellipse Fill="{StaticResource PhoneAccentBrush}" />
            </Grid>

            <!--East horizontal pointer-->
            <Grid ar:ARPanel.Direction="0,90">
                <Ellipse Fill="{StaticResource PhoneAccentBrush}" />
            </Grid>

            <!--Up pointer-->
            <Grid ar:ARPanel.Direction="90,0">
                <Ellipse Fill="{StaticResource PhoneAccentBrush}" />
            </Grid>

            <!--Down pointer-->
            <Grid ar:ARPanel.Direction="-90,0">
                <Ellipse Fill="{StaticResource PhoneAccentBrush}" />
            </Grid>


        </ar:ARPanel>
        <TextBlock Name="txtIntroduction" Foreground="Red"  TextAlignment="Center" FontSize="30" HorizontalAlignment="Left" Height="114" TextWrapping="Wrap" Text="Please move your moblie around to find the mosquitos!Click on them to expel them!" VerticalAlignment="Top" Width="780" Margin="10,191,0,0"/>
  <TextBlock Visibility="Collapsed" TextAlignment="Center" Name="txtNext"  Foreground="Red" FontSize="40" HorizontalAlignment="Center" Height="99" TextWrapping="Wrap" Text="Next Round!" VerticalAlignment="Center" Width="274" Margin="0,0,0,0"/>
        <Button Visibility="Collapsed" Name="btnReplay" BorderThickness="0" HorizontalAlignment="Left" Height="120" VerticalAlignment="Top" Width="129" Margin="341,350,0,0">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Image/replay.png"/>
            </Button.Background>
            <Button.Foreground>
                <ImageBrush Stretch="Fill"/>
            </Button.Foreground>
        </Button>
        <Button Name="btnMute" Tag="On" BorderThickness="0" HorizontalAlignment="Left" Height="72" VerticalAlignment="Top" Width="78" Margin="10,10,0,0" Click="btnMute_Click">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Image/soundon.png"/>
            </Button.Background>
        </Button>
    </Grid>

